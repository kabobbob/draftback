<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
  <meta name="author" content="" />
  <meta name="Keywords" content="" />
  <meta name="Description" content="" />
  <link rel="alternate" type="application/rss+xml" title="givememydraftback.com" href="/givememydraftback.com_feed.xml" />
  <title>Give Me My Draft Back!!!</title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'style' %>
  <%= init_tinymce_hammer_if_required %>
</head>

<body>

  <div id="contain">
    <div id="header">
      <h1>Give Me My Draft Back!!!</h1>
    
    </div>
  
    <div id="leftcol">
      <h4>Recent Posts</h4>
      <ul class="side-nav">
        <% for post in @recent_posts %>
          <li><%= link_to post.title, full_post_path(post.id) %></li>
        <% end %>
      </ul>

      <h4><%= link_to "Archive", archive_posts_path(), :style => "text-decoration:none; color:#fff;" %></h4>
      <ul class="side-nav">
        <% for archive in @archives %>
          <li><%= link_to archive.monthname + " " + archive.year, :controller => 'posts', :action => 'archive', :year => archive.year, :month => archive.month %></li>
        <% end %>
      </ul>
      <span class='sidebar_header'><%= link_to image_tag("feed-icon.png", :border => 0) + " RSS Feed", "/givememydraftback.com_feed.xml", :style => "text-decoration:none; color:#fff;" %></span>
    </div>
  
    <div id="menu">
      <ul>
        <li><%= link_to 'Home', root_path() %></li>
        <li><%= link_to 'Petition', petition_path() %></li>
        <li><%= link_to 'Archive', archive_posts_path() %></li>
        <li><%= link_to 'Contact Us', contact_path() %></li>
        <li><%= link_to 'Links', links_path() %></li>
        <% if current_user %>
          <li><%= link_to 'Manage', manage_path() %></li>
        <% end %>
      </ul>
    </div>
    
    <div id="content">
      <%= @content_for_layout %>
    </div>
  
    <div id="footer">
      <p>
        <% if current_user %>
          <%= link_to "Logout ", user_session_path, :method => :delete, :style => "color:#000;" %>
        <% else %>
          <%= link_to "Login", new_user_session_path(), :style => "color:#000;" %>
        <% end %> | 
        Site Design By: websitestyle.com and Animation Factory | 
        Copyright <%= Time.now.strftime('%Y') %>
      </p>
    </div>
  
  </div>
  <% if prod_environment %>
    <% javascript_tag do -%>
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    <% end -%>
    <% javascript_tag do -%>
      try {
        var pageTracker = _gat._getTracker("UA-12431404-1");
        pageTracker._trackPageview();
      } catch(err) {}
    <% end -%>
  <% end %>
</body>
</html>
