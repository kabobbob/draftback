<h2>Login</h2>

<% form_for @user_session, :url => user_session_path do |f| %> 
<div>
  <table>
    <tr>
      <td colspan="2"><%= f.error_messages %></td>
    </tr>
    <tr>
      <td><%= f.label :login %></td>
      <td><%= f.text_field :login %></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td colspan="2"><%= f.check_box :remember_me %><%= f.label :remember_me %></td>
    </tr>
    <tr>
      <td colspan="2"><%= f.submit "Login" %></td>
    </tr>
  </table>
</div>
<% end %>