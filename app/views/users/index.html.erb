<h2>List Users</h2>
<p></p>
<div>
  <table>
    <tr>
      <th width="75px">Login</th>
      <th width="200px">Email</th>
      <th width="200px">Name</th>
      <th></th>
    </tr>
    <% for user in @users %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name + " " + user.last_name %></td>
      <td>
        <%= link_to 'View', user_path(user.id) %> | <%= link_to 'Delete', user_path(user.id), :method => :delete, :confirm => "Are you sure?" %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td colspan="4"><%= link_to 'Create', new_user_path %></td>
    </tr>
  </table>
</div>